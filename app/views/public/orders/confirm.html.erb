<%= render "public/header",end_user:@end_user%>
<br>
<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<h3>注文情報確認</h3>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-8">
			<table class="table table-striped">
				<thead>
					<tr>
						<th>商品名</th>
						<th>単価</th>
						<th>数量</th>
						<th>小計</th>
					</tr>
				</thead>
				<% total=0%>
				<% @cart_items.each do |cart_item|%>
					<tbody>
						<tr>
							<td><%= cart_item.item.name%></td>
							<td><%= (cart_item.item.price*1.1).round%></td>
							<td><%= cart_item.amount%></td>
							<td><%= (cart_item.item.price*1.1).round*cart_item.amount%></td>
						</tr>
					</tbody>
					<% total+=(cart_item.item.price*1.1).round*cart_item.amount%>
				<% end %>
			</table>
			<div class="col-xs-2">
				<p>送料</p><br>
				<p>商品合計</p><br>
				<p>請求金額</p>
			</div>
			<div class="col-xs-2">
				<p><%= @order.postage%></p><br>
				<p><%= total%></p><br>
				<p><%= @order.postage + total%></p>
			</div>
		</div>
	</div>
		<div class="row">
			<div class="col-xs-2"><h3>支払い方法</h3></div>
			<div class="col-xs-3">
				<% if @order.payment_method == false %>
					<P>銀行振込</P>
				<% else%>
					<p>クレジットカード</p>
				<%  end %>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-2">
				<h3>お届け先</h3>
			</div>
			<div class="col-xs-5">
				<%= @order.postal_code%>
				<%= @order.street_address%>
				<%= @order.address%>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-5"></div>
			<%= form_for(@order,url:public_orders_path,method: :post) do |f|%>
				<%= f.hidden_field :address,:value=>@order.address%>
				<%= f.hidden_field :postal_code,:value=>@order.postal_code%>
				<%= f.hidden_field :street_address,:value=>@order.street_address%>
				<%= f.hidden_field :payment_method,:value=>@order.payment_method%>
				<%= f.hidden_field :total_fee,:value=>@order.postage + total%>
				<%= f.submit "購入を確定する",class: "btn btn-success"%>
			<% end %>
		</div>
</div>
