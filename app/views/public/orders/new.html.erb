<%= render "public/header",end_user:@end_user%>
<br>
<div class="container">
	<%= form_for(@order,url: "/orders/confirm",method: :get,local:true) do |f|%>
		<div class="row">
			<div class="col-xs-2"></div>
			<h3>注文情報入力</h3>
		</div>
		<div class="row">
			<h4><b>支払い方法</b></h4><br>
			<div class="col-xs-1"></div>
			<%= f.radio_button :payment_method, :true %>
  			<%= f.label :gender, "クレジットカード", {value: :true, style: "display: inline-block;"} %><br>
  			<div class="col-xs-1"></div>
  			<%= f.radio_button :payment_method, :false %>
  			<%= f.label :gender, "銀行振込", {value: :false, style: "display: inline-block;"} %>
		</div>
		<div class="row">
			<h4><b>お届け先</b></h4><br>
			<div class="col-xs-1"></div><br>
			<%= radio_button_tag :address_option,1%>
			<%= f.label "ご自身の住所"%><br>
			<%= @end_user.postal_code %>
		</div>
		<div class="row">
			<%= radio_button_tag :address_option,2%>
			<%= f.label "登録済住所から選択"%>
			<%= collection_select(:select_address,:id,@address,:id,:address)%>
		</div>
		<div class="row">
			<%= radio_button_tag :address_option,3%>
			<%= f.label "新しいお届け先"%><br><br>
			<div class="col-xs-3">
				<%= f.label "郵便番号（ハイフンなし）"%><br>
				<%= f.label "住所"%><br>
				<%= f.label "宛名"%><br>
			</div>
			<div class="col-xs-2">
				<%= f.text_field :postal_code %><br>
				<%= f.text_field :street_address %><br>
				<%= f.text_field :address %>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-5"></div>
			<%= f.submit "確認画面へ",class: "btn btn-success"%>
		</div>
	<% end %>
</div>