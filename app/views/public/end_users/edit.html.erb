<%= render "public/header"%>
<div class="container">
    <div class="new_sign_up">
          <h3>新規会員登録</h3>
    </div>

    <div class="row">
        <div class="col-xs-3">
              <%= form_for(@end_user,url: public_end_user_path, method: :patch) do |f| %>
                <div class="field">
                <p>名前</p>
                </div>
        </div>
        <div class="col-xs-3">
                <div class="field">
                    <%= f.label :姓 %><br />
                    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
                </div>
        </div>
        <div class="col-xs-3">
                <div class="field">
                    <%= f.label :名 %><br />
                    <%= f.text_field :second_name, autofocus: true, autocomplete: "second_name" %>
                </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-3">
            <div class="field">
                <p>フリガナ</p>
            </div>
        </div>
        <div class="col-xs-3">
                <div class="field">
                    <%= f.label :セイ %><br />
                    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "second_name" %>
                </div>
        </div>
        <div class="col-xs-3">
                <div class="field">
                    <%= f.label :メイ %><br />
                    <%= f.text_field :second_name_kana, autofocus: true, autocomplete: "second_name" %>
                </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-3">
            <div class="field">
                <p>メールアドレス</p>
            </div>
        </div>
        <div class="col-xs-3">
                <div class="field">
                    <%= f.label :メールアドレス %><br />
                    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
                </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-3">
            <div class="field">
                <p>郵便番号(ハイフンなし)</p>
            </div>
        </div>
        <div class="col-xs-3">
                <div class="field">
                    <%= f.label :郵便番号 %><br />
                    <%= f.text_field :postal_code, autofocus: true, autocomplete: "email" %>
                </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-3">
            <div class="field">
                <p>住所</p>
            </div>
        </div>
        <div class="col-xs-6">
                <div class="field">
                    <%= f.label :住所 %><br />
                    <%= f.text_field :street_address, autofocus: true, autocomplete: "street_address" %>
                </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-3">
            <div class="field">
                <p>電話番号(ハイフンなし)</p>
            </div>
        </div>
        <div class="col-xs-3">
                <div class="field">
                    <%= f.label :電話番号 %><br />
                    <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" %>
                </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-5"></div>
        <div class="col-xs-3">
            <div class="actions">
                <%= f.submit "編集内容を保存する", class: "btn btn-success" %>
            </div>
        </div>
        <div class="col-xs-4">
            <p class="btn btn-danger"><%= link_to "退会する", public_end_users_confirm_path %></p>
        </div>
    </div>
<% end %>
        <h3>すでに登録済みの方</h3>
        

</div>