<%= render "public/header",end_user:@end_user%>
<br>
<div class="container">
    <div class="row">
        <div class="col-xs-2"></div>
        <div class="col-xs-2">
            <div class="my-page bg-info">
                <h3>マイページ</h3>
            </div>
        </div>
    </div>     <br>

    <div class="row">
        <div class="col-xs-2">
            <h3><b>登録情報</b></h3>
        </div>
        <div class="col-xs-2">
            <p class="btn btn-info"><%= link_to "編集する", public_edit_end_user_path(@end_user.id)%></p>
        </div>
        <div class="col-xs-2">
            <p class="btn btn-info">パスワードを編集する</p>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-6">
            <table class="table">
                <tr>
                    <td>氏名</td>
                    <td><%= @end_user.first_name %><%= @end_user.second_name %></td>
                </tr>
                <tr>
                    <td>カナ</td>
                    <td><%= @end_user.first_name_kana%><%= @end_user.second_name_kana %></td>
                </tr>
                <tr>
                    <td>郵便番号</td>
                    <td><%= @end_user.postal_code %></td>
                </tr>
                <tr>
                    <td>住所</td>
                    <td><%= @end_user.street_address %></td>
                </tr>
                <tr>
                    <td>電話番号</td>
                    <td><%= @end_user.phone_number%></td>
                </tr><tr>
                    <td>メールアドレス</td>
                    <td><%= @end_user.email %></td>
                </tr>
            </table>
        </div>
    </div>  <br><br>

    <div class="row">
        <div class="col-xs-2">
            <h3><b>配送先</b></h3>
        </div>
        <div class="col-xs-2">
            <p class="btn btn-success">一覧を見る</p>
        </div>
    </div>

     <div class="row">
        <div class="col-xs-2">
            <h3><b>注文一覧</b></h3>
        </div>
        <div class="col-xs-2">
            <p class="btn btn-success">一覧を見る</p>
        </div>
    </div>


</div>