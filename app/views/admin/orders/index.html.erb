<%= render "admin/header"%>
<br>
<div class="container">
	<div class="row">
		<div class="col-xs-4">
			<h3>注文一覧画面</h3>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-2"></div>
		<div class="col-xs-8">
			<table class="table table-striped">
				<thead>
					<tr>
						<th>購入日時</th>
						<th>購入者</th>
						<th>注文個数</th>
						<th>注文ステータス</th>
					</tr>
				</thead>
				<% @order.each do |order|%>
					<tbody>
						<tr>
							<td><%= link_to order.created_at.strftime('%Y/%m/%d %H:%M:%S'),admin_order_path(order.id)%></td>
							<td><%= order.address%></td>
							<% total=0%>
								<% order.order_details.each do|order_detail|%>
									<% total+=order_detail.amount%>
								<% end %>
							<td><%= total %></td>
							<td><%= order.order_status%></td>
						</tr>
					</tbody>
				<% end %>
			</table>
		</div>
	</div>
</div>