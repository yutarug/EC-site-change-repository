<%= render "admin/header"%>
<br>
<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<h3>ジャンル追加・一覧画面</h3>
		</div>
	</div>
	<div class="row">
		<%= form_for(@genre,url:admin_genres_path,method: :post) do |f| %>
			<div class="col-xs-2">
				<%= f.text_field :name%>
			</div>
			<div class="col-xs-1">
  						<%= f.radio_button :effectice_status, :true %>
  						<%= f.label :gender, "有効", {value: :true, style: "display: inline-block;"} %>
  						<%= f.radio_button :effectice_status, :false %>
  						<%= f.label :gender, "無効", {value: :false, style: "display: inline-block;"} %><!-- ラジオボタンで有効、無効 -->
			</div>
			<div class="col-xs-1">
				<%= f.submit "追加",class:"btn btn-info"%>
			</div>
		<% end %>
			
	</div>
	<div class="row">
		<div class="col-xs-5">
			<table class="table table-striped">
				<thead>
					<tr>
						<th>ジャンル</th>
						<th>状態</th>
						<th></th>
					</tr>
				</thead>
				<% @genres.each do |genre|%>
					<tbody>
						<tr>
							<td><%= genre.name%></td>
								<% if genre.effectice_status == true%>
									<td>有効</td>
								<% else %>
									<td>無効</td>
								<% end %>
							<td><%= link_to "編集する", edit_admin_genre_path(genre.id),class:"btn btn-success"%></td>
						</tr>
					</tbody>
				<% end %>
			</table>
		</div>
	</div>
</div>